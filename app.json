{
  "id": "name.klep.sonoff",
  "sdk": 2,
  "name": {
    "en": "Sonoff"
  },
  "description": {
    "nl": "Bedien Sonoff apparaten met Homey",
    "en": "Control Sonoff devices using Homey"
  },
  "category": "appliances",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Robert Klep",
    "email": "robert@klep.name"
  },
  "drivers": [
    {
      "id": "sonoff",
      "name": {
        "en": "Switch",
        "nl": "Schakelaar"
      },
      "class": "socket",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id" : "intro",
          "navigation": {
            "next": "list_devices"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        },
        {
          "id" : "device-setup",
          "navigation": {
            "next": "list_devices"
          }
        }
      ]
    }
  ]
}
