{
  "id": "name.klep.sonoff",
  "sdk": 2,
  "name": {
    "en": "Sonoff"
  },
  "description": {
    "nl": "Bedien Sonoff apparaten met Homey",
    "en": "Control Sonoff devices using Homey"
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "category": "appliances",
  "version": "1.2.0",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Robert Klep",
    "email": "robert@klep.name"
  },
  "contributors": {
    "developers": [
      {
        "name": "Robert Klep",
        "email": "robert@klep.name"
      }
    ]
  },
  "drivers": [
    {
      "id": "sonoff",
      "class": "socket",
      "name": {
        "en": "WiFi Device",
        "nl": "WiFi Apparaat"
      },
      "capabilities": [
        "onoff"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "greyout": false
        }
      },
      "images": {
        "large": "drivers/sonoff/assets/images/large.png",
        "small": "drivers/sonoff/assets/images/small.png"
      },
      "pair": [
        {
          "id": "intro",
          "navigation": {
            "next": "list-devices"
          }
        },
        {
          "id": "list-devices"
        },
        {
          "id": "device-setup-form"
        },
        {
          "id": "device-setup",
          "navigation": {
            "next": "list-devices"
          }
         }
      ]
    }
  ],
  "flow": {}
}
