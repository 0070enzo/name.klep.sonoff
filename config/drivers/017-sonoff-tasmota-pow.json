{
  "id": "sonoff-tasmota-pow",
  "class": "socket",
  "name": {
    "en": "POW (Tasmota)"
  },
  "capabilities": [
    "onoff",
    "measure_power",
    "measure_voltage",
    "measure_current",
    "power_factor",
    "meter_power",
    "last_update_timestamp"
  ],
  "capabilitiesOptions": {
    "onoff": {
      "greyout": false,
      "title" : {
        "en" : "Switch",
        "nl" : "Schakelaar"
      }
    }
  },
  "images": {
    "large": "drivers/sonoff-tasmota-pow/assets/images/large.png",
    "small": "drivers/sonoff-tasmota-pow/assets/images/small.png"
  },
  "pair": [
    {
      "id": "start"
    },
    {
      "id": "list-devices"
    }
  ],
  "mobile": {
    "components": [
      {
        "id": "icon"
      },
      {
        "id": "toggle",
        "capabilities": [
          "onoff"
        ],
        "options": {
          "showTitle": true
        }
      },
      {
        "id": "sensor",
        "capabilities": [
          "measure_power",
          "measure_voltage",
          "measure_current",
          "power_factor",
          "last_update_timestamp"
        ],
        "options": {
          "icons": {
            "power_factor" : "assets/mobile/power_factor.svg",
            "last_update_timestamp" : "assets/mobile/last_update_timestamp.svg"
          }
        }
      }
    ]
  },
  "settings": [
    {
      "type": "group",
      "label": "MQTT",
      "children": [
        {
          "type": "group",
          "label": "Broker",
          "children": [
            {
              "id": "mqttHost",
              "type": "text",
              "label": {
                "en": "Hostname or IP-address",
                "nl": "Hostname of IP-adres"
              },
              "value": ""
            },
            {
              "id": "mqttPort",
              "type": "text",
              "label": {
                "en": "Port",
                "nl": "Poort"
              },
              "value": "1883",
              "pattern": "^[0-9]+$"
            },
            {
              "id": "mqttUser",
              "type": "text",
              "label": {
                "en": "Username",
                "nl": "Gebruikersnaam"
              },
              "value": "",
              "optional": true
            },
            {
              "id": "mqttPassword",
              "type": "password",
              "label": {
                "en": "Password",
                "nl": "Wachtwoord"
              },
              "value": "",
              "optional": true
            }
          ]
        },
        {
          "type": "group",
          "label": "Topics",
          "collapsed": true,
          "children": [
            {
              "id": "topic",
              "type": "label",
              "label": {
                "en": "Device Topic",
                "nl": "Apparaat Topic"
              },
              "value": "",
              "hint": {
                "en": "The specific MQTT topic for this device.",
                "nl": "Het specifieke MQTT topic voor dit apparaat."
              }
            },
            {
              "id": "fallbackTopic",
              "type": "label",
              "label": "Fallback Topic",
              "value": "",
              "hint": {
                "en": "The fallback MQTT topic for this device.",
                "nl": "Het backup MQTT topic voor dit apparaat."
              }
            },
            {
              "id": "groupTopic",
              "type": "label",
              "label": {
                "en": "Group Topic",
                "nl": "Groep Topic"
              },
              "value": "",
              "hint": {
                "en": "Group topic for this device.",
                "nl": "Groep topic voor dit apparaat."
              }
            }
          ]
        }
      ]
    }
  ]
}
